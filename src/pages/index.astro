---
import BaseLayout from "../layouts/BaseLayout.astro";
const title = "Daniel Bogdanov";
const description = "Daniel Bogdanov's personal website";
---

<BaseLayout title={title} description={description}>
  <div class="space-y-8">
    <div class="space-y-4">
      <h1 class="text-2xl font-extrabold">Daniel Bogdanov</h1>
      <p>
        <a href="mailto:me@danielbogdanov.me" class="link">Email</a> |
        <a
          href="https://www.linkedin.com/in/daniel-bogdanov-6958ba258/"
          class="link"
          target="_blank">LinkedIn</a
        > |
        <a href="https://github.com/DanieII" class="link" target="_blank"
          >GitHub</a
        > |
        <a href="https://x.com/DanielBogdanov0" class="link" target="_blank"
          >X</a
        >
      </p>
    </div>
    <div class="space-y-4">
      <p>
        I enjoy building software, improving my development workflow and
        experimenting with new technologies.
      </p>
      <p>
        On my <a href="/blog" class="link">blog</a>, I write about software
        development.
      </p>
    </div>
    <div class="space-y-4">
      <h2 class="text-xl font-bold">Tech Stack</h2>
      <ul class="ml-6 list-disc">
        <li>TypeScript</li>
        <li>Python</li>
        <li>React</li>
        <li>Django</li>
        <li>Tailwind CSS</li>
      </ul>
    </div>
  </div>
</BaseLayout>
