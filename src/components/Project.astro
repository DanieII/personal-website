---
interface Props {
  title: string;
  description: string;
  url: string;
}

const { title, description, url } = Astro.props;
---

<a href={url}>
  <div
    class="group space-y-2 rounded-md border border-neutral-200 p-4 transition-transform duration-200 hover:scale-110 dark:border-neutral-800"
  >
    <h3 class="text-xl font-bold">{title}</h3>
    <p>{description}</p>
  </div>
</a>
